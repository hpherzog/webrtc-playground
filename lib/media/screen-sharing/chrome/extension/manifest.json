{
  "manifest_version": 2,
  "name": "Screen Sharing",
  "version": "1.0.0",
  "browser_action": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
